@using S3.Train.WebPerFume.Areas.Admin.Models;
@model IEnumerable<ProductViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card card-body display">
    <h2 class="card-text">Products</h2>
    <div>
        @Html.ActionLink("New", "AddOrEditProduct", "Product", new { @class = "btn btn-gradient-success" })
    </div>
    <hr />
    <table id="myTable" class="table table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ImagePath)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Brand_Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Vendor_Id)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.CreateDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsActive)
                </th>
                <th>Functions</th>
            </tr>
        </thead>
        @foreach (var item in Model)
        {
            <tbody>
                <tr>
                    <td>
                        @Html.ActionLink(item.Name, "Edit", new { id = item.Id })
                    </td>
                    <td class="py-1">
                        <img src="~/Content/img/product-men/@item.ImagePath" class="img-" alt="@item.Name" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Brand.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Vendor.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreateDate)
                    </td>
                    <td>
                        @{
                            if (item.IsActive)
                            {
                                <div class="form-check form-check-success">
                                    <label class="form-check-label">
                                        <input type="checkbox" class="form-check-input" name="ExampleRadio2" id="ExampleRadio2" checked="">
                                        <i class="input-helper"></i>
                                    </label>
                                </div>
                            }
                            else
                            {
                                <div class="form-check form-check-danger">
                                    <label class="form-check-label">
                                        <input type="checkbox" class="form-check-input" name="ExampleRadio2" id="ExampleRadio2" checked="">
                                        <i class="input-helper"></i>
                                    </label>
                                </div>
                            }

                        }
                    </td>
                    <td>
                        @Html.Partial("_DeleteProduct", item)
                    </td>
                </tr>
            </tbody>
        }

    </table>
</div>

@section scripts
{
    <script>
        $(document).ready(function () {
            $('#myTable').DataTable();
        });
    </script>
    }